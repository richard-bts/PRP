{
    "ConnectionStrings": {
        "Conn": "Server=WORKPC\\SQLEXPRESS;Initial Catalog=CDL;Integrated Security=True;",
        "ConnectionString_CDLPRP": "Server=WORKPC\\SQLEXPRESS;database=CDLData;Integrated Security=SSPI;max pool size=200;",
        "ConnectionString_CDL_OrderCleanup": "Server=WORKPC\\SQLEXPRESS;database=CDLData;Integrated Security=SSPI;max pool size=200;"
    },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.MSSqlServer"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:14920" }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
            "ConnectionString": "Server=WORKPC\\SQLEXPRESS;database=CDLData;Integrated Security=SSPI;max pool size=200;",
            "tableName": "Logs",
            "columnOptionsSection": {
                "removeStandardColumns": [ "MessageTemplate", "Properties" ],
                "customColumns": [
                    {
                        "ColumnName": "Component",
                        "DataType": "nvarchar",
                        "DataLength": 50,
                        "DEFAULT": "Test"
                    }
                ]
            },
            "autoCreateSqlTable": true
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
